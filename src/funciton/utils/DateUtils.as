package funciton.utils {		import funciton.utils.NumberUtils;		public class DateUtils {				public static const SECOND_IN_MS:uint = 1000;		public static const MINUTE_IN_MS:uint = DateUtils.SECOND_IN_MS * 60;		public static const HOUR_IN_MS:uint = DateUtils.MINUTE_IN_MS * 60;		public static const DAY_IN_MS:uint = DateUtils.HOUR_IN_MS * 24;		public static const WEEK_IN_MS:uint = DateUtils.DAY_IN_MS * 7;				public static function getDayOfYear(date:Date):uint{			var d:Date = new Date(date.fullYear, 0, 1);			return Math.floor((date.time - d.time) / DateUtils.DAY_IN_MS) + 1;		}				public static function getYear(date:Date):String{			return NumberUtils.leftFillWithChar((date.fullYear % 1000) % 100, "0", 2);		}			}	}