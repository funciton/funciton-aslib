package funciton.utils {		public class NumberUtils {		public static function fillWithChar(value:uint, char:String, min_length:uint, index:uint):String{			var v:String = value.toString();			if(index > v.length) throw new RangeError("Index out of bounds");			if(v.length >= min_length) return v;						var l:uint = min_length - v.length;			var res:String = v.substring(0, index);			for(var i:int=0;i<l;++i) res += char.charAt(i % char.length);			return res + v.substring(index, index + 1);		}				public static function rightFillWithChar(value:uint, char:String, min_length:uint):String{			return fillWithChar(value, char, min_length, value.toString().length);		}				public static function leftFillWithChar(value:uint, char:String, min_length:uint):String{			return fillWithChar(value, char, min_length, 0);		}	}	}